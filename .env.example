# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta

# Database
MONGODB_URI=mongodb://localhost:27017/solence
MONGODB_DB_NAME=solence

# OpenAI (for AI insights)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Rate Limiting
RATE_LIMIT_MAX_PER_HOUR=10
RATE_LIMIT_MAX_PER_DAY=100
RATE_LIMIT_WINDOW_MS=3600000

# API Configuration
API_VERSION=v1
API_BASE_URL=https://solence.ai/api

# Authentication (optional)
JWT_SECRET=your_jwt_secret_here
API_KEY_SALT=your_api_key_salt_here

# Server
PORT=3000
NODE_ENV=development

# Cache (Redis - optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Badge Minting
BADGE_MINT_FEE_LAMPORTS=5000
BADGE_PROGRAM_ID=your_solana_program_id_here
BADGE_AUTHORITY_PRIVATE_KEY=your_authority_key_here

# Analytics (optional)
ANALYTICS_ENABLED=false
POSTHOG_API_KEY=your_posthog_key_here

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
